# Adjust log level
# https://docs.npmjs.com/cli/v8/using-npm/config#loglevel
loglevel="warn"

# Disable audit reports
# https://docs.npmjs.com/cli/v8/using-npm/config#audit
audit=false

# Disable funding message
# https://docs.npmjs.com/cli/v8/using-npm/config#fund
fund=false

# Disable progress bar
progress=false

strict-peer-deps=true

# Ensure Vite can optimize these deps in PNPM
public-hoist-pattern[]=cookie
public-hoist-pattern[]=set-cookie-parser
public-hoist-pattern[]=content-security-policy-builder

workspaces-update=false