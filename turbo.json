{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist"]
    },
    "lint": {
      "cache": false,
      "outputs": [".eslintcache"]
    },
    "typecheck": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "hydrogen-sanity#build",
        "@repo/sanity-config#build",
        "@repo/sanity-config#extract"
      ],
      "with": [
        "hydrogen-sanity#watch",
        "@repo/sanity-config#watch",
        "@repo/sanity-config#extract:watch"
      ],
      "cache": false,
      "persistent": true
    },
    "hydrogen-sanity#watch": {
      "cache": false,
      "persistent": true
    },
    "@repo/sanity-config#watch": {
      "cache": false,
      "persistent": true
    },
    "@repo/sanity-config#extract": {
      "inputs": ["src/**"],
      "outputs": ["schema.json"]
    },
    "@repo/sanity-config#extract:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
