{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist"]
    },
    "lint": {
      "cache": false,
      "outputs": [".eslintcache"]
    },
    "typecheck": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "dependsOn": ["hydrogen-sanity#build", "@repo/sanity-config#build"],
      "with": ["hydrogen-sanity#watch", "@repo/sanity-config#watch"],
      "cache": false,
      "persistent": true
    },
    "hydrogen-sanity#watch": {
      "cache": false,
      "persistent": true
    },
    "@repo/sanity-config#watch": {
      "cache": false,
      "persistent": true
    }
  }
}
