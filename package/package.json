{
  "name": "hydrogen-sanity",
  "version": "4.3.3",
  "description": "Sanity.io toolkit for Hydrogen",
  "keywords": [
    "sanity",
    "sanity.io",
    "shopify",
    "hydrogen",
    "remix",
    "live",
    "preview"
  ],
  "homepage": "https://github.com/sanity-io/hydrogen-sanity#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/hydrogen-sanity/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/hydrogen-sanity.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./preview/route": {
      "source": "./src/preview/route.ts",
      "import": "./dist/preview/route.js",
      "default": "./dist/preview/route.js"
    },
    "./visual-editing": {
      "source": "./src/visual-editing/index.ts",
      "import": "./dist/visual-editing/index.js",
      "default": "./dist/visual-editing/index.js"
    },
    "./groq": {
      "source": "./src/groq.ts",
      "import": "./dist/groq.js",
      "default": "./dist/groq.js"
    },
    "./vite": {
      "source": "./src/vite/index.ts",
      "import": "./dist/vite/index.js",
      "default": "./dist/vite/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "preview/route": [
        "./dist/preview/route.d.ts"
      ],
      "visual-editing": [
        "./dist/visual-editing/index.d.ts"
      ],
      "groq": [
        "./dist/groq.d.ts"
      ],
      "vite": [
        "./dist/vite/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pkg build --strict --clean --check",
    "release": "semantic-release",
    "release:debug": "semantic-release --dry-run --debug",
    "release:no-ci": "GITHUB_TOKEN=`gh auth token` semantic-release --no-ci --debug --dryRun",
    "link-watch": "plugin-kit link-watch",
    "lint": "eslint --cache .",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc",
    "watch": "pkg-utils watch --strict"
  },
  "dependencies": {
    "@sanity/client": "^7.3.0",
    "@sanity/preview-url-secret": "^2.1.11",
    "@sanity/react-loader": "^1.11.10",
    "@sanity/visual-editing": "^2.13.22",
    "groq": "^3.89.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@sanity/pkg-utils": "^6.13.4",
    "@sanity/plugin-kit": "^4.0.19",
    "@sanity/semantic-release-preset": "^4.1.8",
    "@shopify/hydrogen": "~2025.5.0",
    "@shopify/remix-oxygen": "^3.0.0",
    "@types/react": "^18.3.22",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-sanity": "^7.1.4",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semantic-release": "^23.1.1",
    "typescript": "^5.8.3",
    "vite": "^6.2.4",
    "vitest": "^2.1.9",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "peerDependencies": {
    "@sanity/client": "^7",
    "@shopify/hydrogen": "~2025.5.0",
    "@shopify/remix-oxygen": "^3",
    "groq": "^3",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "vite": "^6"
  },
  "engines": {
    "node": ">=18"
  }
}
