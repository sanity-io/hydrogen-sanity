{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo --ui tui dev",
    "watch:apps": "turbo --ui tui dev --filter=\"./examples/**\"",
    "watch:package": "turbo --ui tui dev --filter=\"hydrogen-sanity\"",
    "watch:studio-config": "turbo --ui tui dev --filter=\"@repo/studio-config\"",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "test": "vitest",
    "format": "prettier --cache --write --ignore-unknown ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "turbo": "^2.5.6",
    "vitest": "^3.2.4",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "overrides": {
      "hydrogen-sanity": "workspace:*",
      "sanity": "^4"
    }
  }
}
