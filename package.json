{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo --ui tui dev",
    "watch:apps": "turbo --ui tui dev --filter=\"./examples/**\"",
    "watch:package": "turbo --ui tui dev --filter=\"hydrogen-sanity\"",
    "watch:sanity-config": "turbo --ui tui dev --filter=\"@repo/sanity-config\"",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "test": "vitest",
    "format": "prettier --cache --write --ignore-unknown ."
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "turbo": "^2.6.3",
    "vitest": "^4.0.15",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "overrides": {
      "hydrogen-sanity": "workspace:*",
      "sanity": "^4.6.1",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "@types/react": "^18.2.0",
      "@types/react-dom": "^18.2.0"
    }
  }
}
