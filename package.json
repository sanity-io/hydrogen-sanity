{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo --ui tui dev",
    "watch:apps": "turbo --ui tui dev --filter=\"./examples/**\"",
    "watch:package": "turbo --ui tui dev --filter=\"hydrogen-sanity\"",
    "watch:sanity-config": "turbo --ui tui dev --filter=\"@repo/sanity-config\"",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "test": "vitest",
    "format": "prettier --cache --write --ignore-unknown ."
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "turbo": "^2.8.4",
    "vitest": "^4.0.18",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "packageManager": "pnpm@10.29.2"
}
