{
  "private": true,
  "workspaces": [
    "package",
    "test-storefront"
  ],
  "scripts": {
    "build": "npm run build -w hydrogen-sanity",
    "format": "npm run format --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prepare": "husky install",
    "release": "npm run release -w hydrogen-sanity",
    "compile": "npm run compile -w hydrogen-sanity && npm run build -w hydrogen-sanity && npm run compile -w test-storefront"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5"
  }
}
